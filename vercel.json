{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "client/vite.config.ts", "use": "@vercel/static-build" }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
